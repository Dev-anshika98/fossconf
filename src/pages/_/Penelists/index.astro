---
import { penelists } from "@src/data/schedules/current"
import { year } from "@src/data/date"
import Penelists from "./Penelists.svelte"
---

<section id="penelists" class="rows">
  <div>
    <h2>
      Panelists
    </h2>
  </div>
  <div class="grid">
    <Penelists penelists={penelists} client:visible />
  </div>
</section>

<style>
  h2 {
    --stroke-color: var(--red);
  }
  .grid {
    --columns: 2;
    display: grid;
    grid-template-columns: repeat(var(--columns), 1fr);
    grid-gap: 1rem;
  }

  @media screen and (min-width: 960px) {
    .grid {
      --columns: 3;
    }
  }
</style>
