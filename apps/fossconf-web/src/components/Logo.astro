---
import { Image } from 'astro:assets';

import Logo from "./fossconf.svg"
import { year } from "../data/date"
---

<header>
  <h1>
    <a href="/"><Image src={Logo} alt={`FOSSConf India ${year}`} /></a>
  </h1>
</header>

<style>
  header {
    padding: 1.5rem var(--padding) 0 var(--padding);
    text-align: left;
  }

  h1 {
    margin: 0;
  }

  img {
    margin-bottom: 0;
    max-width: 80%;
  }

  @media screen and (min-width: 481px) {
    header {
      padding-top: 2rem;
    }
  }

  @media screen and (min-width: 600px) {
    img {
      max-width: none;
    }
  }
</style>
